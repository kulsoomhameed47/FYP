# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Connection
# Local: mongodb://localhost:27017/modest-fashion
# Atlas: mongodb+srv://<username>:<password>@cluster.mongodb.net/modest-fashion
MONGODB_URI=mongodb://localhost:27017/modest-fashion

# JWT Secrets (change these in production!)
JWT_SECRET=modest-fashion-jwt-secret-key-change-in-production-2026
JWT_REFRESH_SECRET=modest-fashion-refresh-secret-key-change-in-production-2026
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# Stripe API Keys (use test keys for development)
# Get from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# OpenAI API Key for Chatbot
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Client URL (for CORS)
CLIENT_URL=http://localhost:5173
