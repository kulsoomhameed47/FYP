# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Connection
# Local: mongodb://localhost:27017/modest-fashion
# Atlas: mongodb+srv://<username>:<password>@cluster.mongodb.net/modest-fashion
MONGODB_URI=mongodb://localhost:27017/modest-fashion

# JWT Secrets (generate strong random strings for production!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-refresh-token-secret-change-in-production-min-32-chars
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# Stripe API Keys (use test keys for development)
# Get from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# OpenAI API Key for Chatbot
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Alternative: Groq API (free tier)
# Get from: https://console.groq.com/keys
# GROQ_API_KEY=gsk_your_groq_api_key_here

# Client URL (for CORS)
CLIENT_URL=http://localhost:5173
